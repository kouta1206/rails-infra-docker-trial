<div class="container">
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card" style="width: 60rem;">
            <div class="card-body my-4 mb-5">
                <div class="d-flex justify-content-center align-items-center" style="height: 5rem;">
                    <%= image_tag 'movie-record-logo.png', style: "width: 70px;" %>
                    <div class="card-title  h1" style="line-height: 120px; margin-left: 20px;">movie-record</div>
                </div>
                <h1 class="card-title text-center">新規登録</h1>
                <div class="d-flex justify-content-center">
                    <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name,), local: true do |f| %>
                    <div class="form-group mb-3" style="width: 40rem;">
                        <%= f.label :name, "ユーザー名", class: "text-left;!important" %>
                        <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名を入力ください", class: "form-control" %>
                    </div>
                    <div class="form-group mb-3" style="width: 40rem;">
                        <%= f.label :email, "メールアドレス", class: "text-left;!important" %>
                        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力ください", class: "form-control" %>
                    </div>
                    <div class="form-group mb-3" style="width: 40rem;">
                        <%= f.label :password, "パスワード", class: "text-left;!important" %>
                        <%= f.password_field :password, autofocus: true, placeholder: "パスワードを入力ください", class: "form-control" %>
                    </div>
                    <div class="form-group mb-3" style="width: 40rem;">
                        <%= f.label :password_confirmation, "パスワード(確認)", class: "text-left;!important" %>
                        <%= f.password_field :password_confirmation, autofocus: true, placeholder: "パスワード(確認)を入力ください", class: "form-control" %>
                    </div>
                    <div class="d-grid">
                        <%= f.submit "登録する", class: "btn btn-primary mt-3" %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>